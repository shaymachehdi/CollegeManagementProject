@model CollegeManagementProject.Models.Etudiant

@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<br> <br>

<center><h2 style="color:coral">Modifier les information de l'élève n°: @Html.DisplayFor(model => model.EtudiantId)</h2></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ClasseId)

  <div class="form-group">
        <p class="control-label col-md-2">Nom</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Prénom</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Date naissance</p>
        <div class="col-md-10">
            <input type="date" name="DateNaissance" id="datepicker" class="form-control" width="276" />
        </div>
    </div>


    <div class="form-group">
        <p class="control-label col-md-2">Adresse</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Email</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Tel</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <p class="control-label col-md-2">Code classe</p>
        <div class="col-md-10">
            @Html.DropDownList("ClasseId", (IEnumerable<SelectListItem>)ViewBag.EtudiantList)
            @Html.ValidationMessageFor(model => model.ClasseId)
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" /> &nbsp;&nbsp;&nbsp;&nbsp;

                <a style="color:black" href="@Url.Action("Index", new { id = Model.EtudiantId })">
                    <i class="glyphicon glyphicon-arrow-left"></i>
            </div>
        </div>
    </div>
}







