
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>

    <!-- Required meta tags -->
    <link rel="icon" href=@Url.Content("/Content/img/favicon.png") type="image/png">
    <title>EduSmart High School</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href=@Url.Content("~/Content/css/bootstrap.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/vendors/linericon/style.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/css/font-awesome.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/vendors/owl-carousel/owl.carousel.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/vendors/lightbox/simpleLightbox.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/vendors/nice-select/css/nice-select.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/vendors/animate-css/animate.css")>
    <!-- main css -->
    <link rel="stylesheet" href=@Url.Content("~/Content/css/style.css")>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

</head>
<body>
    <!--================ Start Header Menu Area =================-->
    <header class="header_area">
        <div class="header-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-sm-6 col-4 header-top-left">
                        <a href="tel:+9530123654896">
                            <span class="lnr lnr-phone"></span>
                            <span class="text">
                                <span class="text">78123456</span>
                            </span>
                        </a>
                        <a href="mailto:eduSmart@gmail.com">
                            <span class="lnr lnr-envelope"></span>
                            <span class="text">
                                <span class="text">eduSmart@gmail.com</span>
                            </span>
                        </a>
                    </div>

                    <div class="col-lg-6 col-sm-6 col-8 header-top-right">
                        @Html.Partial("_LoginPartial")

                    </div>

                </div>
            </div>
        </div>

        <div class="main_menu">
            <div class="search_input" id="search_input_box">
                <div class="container">
                    <form class="d-flex justify-content-between" method="" action="">
                        <input type="text" class="form-control" id="search_input" placeholder="Search Here">
                        <button type="submit" class="btn"></button>
                        <span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
                    </form>
                </div>
            </div>

            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" href="index.html"><img src="img/logo.png" alt=""></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">


                        <ul class="nav navbar-nav menu_nav ml-auto">
                            <li class="nav-item active"><a class="nav-link">@Html.ActionLink("Acceuil", "Index", "Home")</a></li>
                            <li class="nav-item"><a class="nav-link">@Html.ActionLink("À propos de", "About", "Home")</a></li>

                            <li class="nav-item submenu dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                   aria-expanded="false">@Html.ActionLink("Cours", "Index", "MatiéreSimpleUtilisateur")</a>
                                <ul class="dropdown-menu">
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link">@Html.ActionLink("Contact", "Contact", "Home")</a></li>

                            <li class="nav-item">
                                <a href="#" class="nav-link search" id="search">
                                    <i class="lnr lnr-magnifier"></i>
                                </a>
                            </li>
                        </ul>


                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->
    <!--================ Start Home Banner Area =================-->
    <div>
        @RenderBody()

    </div>
    <!--================ End Home Banner Area =================-->
    <!--================ Start Feature Area =================-->
    <br />
    <div class="row footer-bottom d-flex justify-content-between">
        <p class="col-lg-8 col-sm-12 footer-text m-0 text-white">

            <a href="#"> Copyright ©  @DateTime.Now.Year  All rights reserved | EduSmart High School</a>
        </p>
        <div class="col-lg-4 col-sm-12 footer-social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-dribbble"></i></a>
            <a href="#"><i class="fa fa-behance"></i></a>
        </div>
    </div>
    </div>
    </footer>


    <script src=@Url.Content("~/Content/js/jquery-3.2.1.min.js")></script>
    <script src=@Url.Content("~/Content/js/popper.js")></script>
    <script src=@Url.Content("~/Content/js/bootstrap.min.js")></script>
    <script src=@Url.Content("~/Content/js/stellar.js")></script>
    <script src=@Url.Content("~/Content/js/countdown.js")></script>
    <script src=@Url.Content("~/Content/vendors/nice-select/js/jquery.nice-select.min.js")></script>
    <script src=@Url.Content("~/Content/vendors/owl-carousel/owl.carousel.min.js")></script>
    <script src=@Url.Content("~/Content/js/owl-carousel-thumb.min.js")></script>
    <script src=@Url.Content("~/Content/js/jquery.ajaxchimp.min.js")></script>
    <script src=@Url.Content("~/Content/vendors/counter-up/jquery.counterup.js")></script>
    <script src=@Url.Content("~/Content/js/mail-script.js")></script>
    <!--gmaps Js-->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script>
    <script src=@Url.Content("~/Content/js/gmaps.min.js")></script>
    <script src=@Url.Content("~/Content/js/theme.js")></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</body>
</html>
