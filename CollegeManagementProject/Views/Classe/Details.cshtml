    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br> <br>


<center>
    <h2 style="color:coral">Details de la classe n°: @Html.DisplayFor(model => model.ClasseId)</h2>
</center>


