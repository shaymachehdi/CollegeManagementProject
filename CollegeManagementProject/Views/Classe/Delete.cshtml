@model CollegeManagementProject.Models.Classe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<center>
    <h2 style="color:coral">Etes-vous sûr de supprimer la classe n°: @Html.DisplayFor(model => model.ClasseId) ?</h2>
</center>

<div>

    <hr />
    <dl class="dl-horizontal0" style="text-align:center">
        <dt>
            @Html.DisplayNameFor(model => model.Designation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Designation)
        </dd>

       
        <dt>
            Code niveau
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NiveauId)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <br>

        <div class="form-actions no-color" style="text-align:center">
            <input type="submit" value="Delete" class="btn btn-default" />&nbsp;&nbsp;&nbsp;&nbsp;
            <a style="color:black" href="@Url.Action("Index", new { id = Model.ClasseId })">
                <i class="glyphicon glyphicon-arrow-left"></i>

        </div>
    }
</div>
