@model CollegeManagementProject.Models.Enseignant


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <center>
        <h2 style="color:coral">Ajouter un nouveau enseignant </h2>
    </center>



    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p class="control-label col-md-2">Nom</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Prénom</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Email</p>
        <div class="col-md-10">
            <input type="email" name="email" id="email" class="form-control" width="276" />
        </div>
    </div>
    @*<div class="form-group">
                <p class="control-label col-md-2">Email</p>
                <div class="col-md-10">
                </div>
            </div>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        </div>*@

    <div class="form-group">
        <p class="control-label col-md-2">Tel</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <p class="control-label col-md-2">Cours</p>
        <div class="col-md-10">
            @Html.DropDownList("MatiereId", (IEnumerable<SelectListItem>)ViewBag.EnseignantList, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatiereId)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Créer" class="btn btn-default" /> &nbsp;&nbsp;&nbsp;&nbsp;

            <a style="color:black" href="@Url.Action("Index")">
                <i class="glyphicon glyphicon-arrow-left"></i>
        </div>
    </div>
</div>
        }

